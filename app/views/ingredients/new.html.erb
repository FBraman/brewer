<div><%= form_for [@recipe, @ingredient] do |f| %>

    <div class="field">
      <%= f.label :component_id %><br />
      <%= f.select :component_id, options_for_select(Component.all.map{|s|[s.name, s.id]}) %>
    </div>

    

  <div class="actions">
    <%= f.submit class: "small radius button" %>
  </div>
  <% end %>
</div>