


<div class="row">
	<div class="small-4 large-4 column">
		<div>
			<%= form_for [@recipe, @ingredient] do |f| %>
			<%= f.collection_select(:component_id, Component.all, :id, :name) %>
		</div>

		<div>
	  	<%= f.label :amount %>
	  	<%= f.number_field :amount, class: "text_field", step: 0.01 %>
  	</div>

  	<% if @ingredient.component.version.include? "hops" %>
  	<div>
	  	<%= f.label :boil_time %>
	  	<%= f.number_field :boil_time, class: "text_field", step: 0.01 %>
  	</div>
  	<% end %>
  	
  	<div class="actions">
      <%= f.submit "update ingredient", class: "small radius button", method: "post" %>
    </div>



  	<% end %>
    </div>
</div>