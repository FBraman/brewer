<div class="panel">
  <%= form_for(@recipe) do |f| %>
    <% if @recipe.errors.any? %>
      <div id="error_explanation">
        <div>
          <%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:
        </div>    <ul>
          <% @recipe.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

      <% if current_user %>
        <div class="field">
          <%= f.label :recipe_name %>
          <%= f.text_field :recipe_name %><br />
        </div>

        <div class="field">
          <%= f.label :target_volume %>
          <%= f.number_field :target_volume %><br>
        </div>

        <div class="field">
            <%= f.hidden_field :user_id, value: current_user.id %>
          </div>

        <div class="field">
          <%= f.label :mash_temp %> <p>Farenheight</p>
          <%= f.number_field :mash_temp, class: "text_field", step: 1, value: 152 %>
        </div>

        <div class="field">
          <%= f.label :grain_temp %> <p>Farenheight</p>
          <%= f.number_field :grain_temp, class: "text_field", step: 1, value: 65 %>
        </div>

        <div class="field">
          <%= f.label :mash_thickness %> <p>qts per pound of grain</p>
          <%= f.number_field :mash_thickness, class: "text_field", step: 0.01, value: 1.5 %>
        </div>

         <div class="field">
          <%= f.label :efficiency %>
          <%= f.number_field :efficiency, class: "text_field", value: 70 %><br>
        </div>

        <div class="actions">
          <%= f.submit class: "small radius button" %>
        </div>
      <% else %>
        <h1>You must be signed in to create a recipe</h1>
    <% end %>

  <% end %>
</div>