
		<div>
      <h2>
        Recipe:
        <%= @recipe.recipe_name %>
        Target volume:
        <%= @recipe.target_volume %> g

      </h2>
        
    </div>

    <div>
      <div>
        <% @recipe.ingredients.each do |ingredient| %>
          <ul>
            <% if ingredient.component.version == "yeast" %>
            <li><%= ingredient.amount  %>  vials/smack pack(s) <%=link_to ingredient.component.name, component_path(ingredient.component) %>  
                <%= link_to "-", recipe_ingredient_path(ingredient.recipe, ingredient), method: :delete %>
            </li>
          </ul>
          <% end %>
        <% end %>
      </div>
      <div>
    	<% @recipe.ingredients.each do |ingredient| %>
    		<ul>
          <% if ingredient.component.version.include? "fermentable" %>
    			<li><%= ingredient.amount  %>  lbs. <%= link_to ingredient.component.name, component_path(ingredient.component) %>  
              <%= link_to "-", recipe_ingredient_path(ingredient.recipe, ingredient), method: :delete %>
          </li>
    		</ul>
        <% end %>
    	<% end %>
  	</div>
  </div>

    <div>
      Strike water: 
      <%= @recipe.strike_water %>
    </div>

    <div>
      Sparge water: 
      <%= @recipe.sparge_water %>
    </div>

    <div>
      Total water: 
      <%= @recipe.total_water %>
    </div>

    <div>
      Preboil gravity: 
      <%= @recipe.preboil_gravity %>
    </div>

    <div>
      projected original gravity: 
      <%= @recipe.target_og %>
    </div>

    <div>
      projected final gravity:
      <%= @recipe.projected_final_gravity %>
    </div>




    <% if @recipe.owner?(current_user) %>
    <div>
      <%= link_to "Delete Recipe", recipe_path(@recipe), method: :delete %>
    </div>
    <% end %>

      <div>
      <%= link_to "Learn more about Ingredients", components_path %>
    </div>
    


<% if @recipe.owner?(current_user) %>
  <%= render "/ingredients/form" %>
<% end %>
